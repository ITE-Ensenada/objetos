O(log n ^ 2 )
-PERMUTACION
    [n][n][n] = > n * n * n
    [1][2][3]

    [1][1][1]
-COMBINACIONES
    [n][n][n]

"""
def verificador(arreglo):
    ascendente = True
    descendente = True
    for i in range(len(arreglo)-1):
        if i > i+1:
            ascendente = False
        elif i < i+1:
            descendente = False
    if ascendente:
        return 'ascendente'
    elif descendente:
        return 'descendente'
    else:
        return 'no ordenado'
